#Creating functions for calculatos.

def add(num1 , num2):
    return num1 + num2

def minus(num1 , num2):
    return num1 - num2

def multi(num1 , num2):
    return num1 * num2

def divide(num1 , num2):
    if num2 == 0:
       print("Number cannot be divided by 0")
    else:
        return num1 / num2
    
def avg(num1, num2):
    return (num1 + num2) / 2

