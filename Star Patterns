STAR PATTERNS.
-----------------------------------------------------------------------------
#Triangle Pattern

n = 5               #number of rows

print("First Method")

for i in range(1 , n+1):
    for j in range(1 , i+1):
        print("*", end = " ")
    print()


print("\nSecond Method")

for i in range(1 , n+1):
    print("*" * i)

-----------------------------------------------------------------------------

#Inverted Triangle Pattern

n = 5

print("First Method")

for i in range(n, 0, -1):
    for j in range(1 , i+1):
        print("*", end = " ")
    print()

print("\nSecond Method")

for i in range(n, 0, -1):
    print("*" * i)

-----------------------------------------------------------------------------

#Pyramid Pattern Triangle

n = 5

for i in range(1, n+1):
    print(' ' * (n - i), end = " ")
    print("*" * (2 * i -1))

-----------------------------------------------------------------------------
